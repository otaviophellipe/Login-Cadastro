{
  "site": {
    "name": "Login System",
    "version": "1.0.0",
    "author": "Otavio Phellipe"
  },
  "api": {
    "loginEndpoint": "login.php",
    "registerEndpoint": "register.php"
  },
  "themes": {
    "primaryColor": "#e29e3e",
    "backgroundColor": "#201b2c",
    "textColor": "#f0ffffde"
